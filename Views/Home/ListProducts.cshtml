@model IEnumerable<Aflevering1.Models.Product>
    @{
Layout = null;
    }
    <!DOCTYPE html>
    <html>
    <head>
        <meta name="viewport" content="width=device-width" />
        <title>Shopping List</title>
        <link rel="stylesheet" href="/lib/bootstrap/dist/css/bootstrap.css" />
        <link rel="stylesheet" href="/css/styles.css" />
    </head>
    <body>
        <div>
            <h2>Shopping List</h2>
            <table class="table table-bordered table-striped table-sm">
                <thead>
                    <tr>
                        <th>Section</th>
                        <th>Product name</th>
                        <th class="text-center p-2">Amount</th>
                        <th class="text-center p-2">Collected</th>
                        <th class="text-center p-2">Removal</th>
                    </tr>
                </thead>
                <tbody>
                    @foreach (Aflevering1.Models.Product p in Model!) {
                    <tr>
                        <td>@p.Section</td>
                        <td>@p.Name</td>
                        <td class="text-center p-2">@p.Amount</td>
                        <td class="text-center p-2"><input type="checkbox"></td>
                        <td class="text-center p-2">
                            <form method="post" asp-controller="Home" asp-action="RemoveProduct">
                                <input type="hidden" name="productName" value="@p.Name" />
                                <button type="submit" class="btn btn-danger">Remove</button>
                            </form>
                        </td>
                    </tr>
                    }
                </tbody>
            </table>
            <a asp-action="ShoppingListForm">
                <input type="button" class="btn btn-primary mt-3" value="Add more products"></input>
            </a>
        </div>
    </body>
</html>
